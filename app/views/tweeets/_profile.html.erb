<div class="column">
  <nav class="panel">
    <div class="panel-block">
      <article class="media">
        <div class="media-left">
          <figure class="image is-64x64">
            <%= gravatar_image_tag(current_user.email,size:64,alt: current_user.name)%>
          </figure>
        </div>
        <div class="media-content">
          <div class="content">
            <p>
              <strong class = "profile-links">
                <%= current_user.name%>
              </strong><br/>
              <small> <%= current_user.username%></small>
            </p>
          </div>
        </div>
      </article>
    </div>
    <div class="panel-block">
      <div class="level is-mobile">

         <div class="level-item has-centered-text">
          <div>
            <p class="heading profile-links">Following</p>
            <p class="title is-6 profile-links">123</p>
          </div>
        </div>

         <div class="level-item has-centered-text">
          <div>
            <p class="heading profile-links">Followers</p>
            <p class="title is-6 profile-links">456K</p>
          </div>
        </div>
      </div>
    </div>
  </nav>
</div>
<%= simple_form_for(@tweeet) do |f|%>
  <%= f.error_notification%>
  <div class="field">
    <div class="control">
      <%= f.input :tweeet, label: "Tweet about it #{ current_user.name.upcase if current_user } !!!", input_html:{class: "textarea" },wrapper:false , label_html: {class:"label"},placeholder:"Compose a new tweet..." , autofocus: true %>
    </div>
  </div>
  <%= f.submit "Tweet", class: "button is-info is-rounded" %>
  
  <% end %>